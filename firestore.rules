
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow users to read their own user document to check roles
    match /users/{userId} {
      allow get: if request.auth.uid == userId;
      allow list: if request.auth != null; // Allows admin to list users
      allow write: if request.auth.uid == userId; // Allow users to update their own profile
    }

    // Allow authenticated users to read data from other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
